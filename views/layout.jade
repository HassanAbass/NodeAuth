html
    head
        title #{title} : Express Wesite
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        link(href='/stylesheets/bootstrap.css', rel='stylesheet')
        link(rel='stylesheet', href='/stylesheets/style.css')
    body
        nav.navbar.navbar-default.navbar.navbar-fixed-top
            .container
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='#') #{title}

                // Collect the nav links, forms, and other content for toggling
                #bs-example-navbar-collapse-1.collapse.navbar-collapse
                    ul.nav.navbar-nav.navbar-left
                        li.nav-item
                            a.nav-link(href='/',class=(title === 'Members' ? 'active' : ''))
                                | Home
                                span.sr-only (current)
                        if !user
                            li.nav-item
                                a.nav-link(href='/users/register',class=(title === 'Register' ? 'active' : '')) Register
                            li.nav-item
                                a.nav-link(href='/users/login',class=(title === 'Login' ? 'active' : '')) Login
                    if user
                        ul.nav.navbar-nav.navbar-right
                            li.nav-item.left
                                a.nav-link(href='/users/logout') Logout


        .container
            != messages()
            block content

        script(src='/javascripts/jquery-1.11.3.min.js')
        script(src='/javascripts/bootstrap.min.js')
